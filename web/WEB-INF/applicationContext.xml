                                requires-channel="http"/>
        <security:intercept-url pattern="/file_download.htm" access="ROLE_USER" 
                                requires-channel="http"/>
        <security:intercept-url pattern="/user_settings.htm" access="ROLE_USER" 
                                requires-channel="https"/>
        <!-- 
