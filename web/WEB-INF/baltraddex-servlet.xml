<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
    
    <!--
        URL to controller mapping. Bean references http request interceptor which is used
        to control user authentication process.
    -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="httpRequestInterceptor"/>
            </list>
        </property>
        <property name="mappings">
            <props>
                <prop key="welcome.htm">urlFilenameController</prop>
                <prop key="channels.htm">channelController</prop>
                <prop key="channeldata.htm">channelDataController</prop>
                <prop key="download.htm">downloadController</prop>
                <prop key="admin.htm">urlFilenameController</prop>
                <prop key="subscriptions.htm">subscriptionsController</prop>
                <prop key="submit.htm">submitSubscriptionsController</prop>
                <prop key="status.htm">subscriptionStatusController</prop>
                <prop key="log.htm">urlFilenameController</prop>
                <prop key="logtable.htm">logTableController</prop>
                <prop key="journal.htm">journalController</prop>
                <prop key="incoming.htm">urlFilenameController</prop>
                <prop key="clearmessages.htm">urlFilenameController</prop>
                <prop key="confirmclearmessages.htm">clrMsgsController</prop>
                <prop key="showregister.htm">showRegController</prop>
                <prop key="clearregister.htm">urlFilenameController</prop>
                <prop key="confirmclearregister.htm">clrRegController</prop>

                <prop key="saveuser.htm">saveUserController</prop>
                <prop key="edituser.htm">editUserController</prop>
                
                <prop key="showUsers.htm">removeUserController</prop>
                <prop key="showSelectedUsers.htm">removeUserController</prop>
                <prop key="showRemovedUsers.htm">removeUserController</prop>

                <prop key="savechannel.htm">saveChannelController</prop>
                <prop key="editchannel.htm">editChannelController</prop>
               
                <prop key="showChannels.htm">removeChannelController</prop>
                <prop key="showSelectedChannels.htm">removeChannelController</prop>
                <prop key="showRemovedChannels.htm">removeChannelController</prop>
            </props>
        </property>
    </bean>

    <!--
        URL to controller mapping. These URLs are not intercepted by the http request interceptor
        class.
    -->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="signin.htm">signInController</prop>
                <prop key="signout.htm">signOutController</prop>
                <prop key="transmitter.htm">transmitter</prop>
                <prop key="receiver.htm">receiver</prop> 
            </props>
        </property>
    </bean>

    <!--
        View resolver.
    -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <!--
        Name resolver to be used with classes extending MultiActionController
    -->
    <bean id="nameResolver"
        class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="showChannels">showChannels</prop>
                <prop key="showSelectedChannels">showSelectedChannels</prop>
                <prop key="showRemovedChannels">showRemovedChannels</prop>
                <prop key="showUsers">showUsers</prop>
                <prop key="showSelectedUsers">showSelectedUsers</prop>
                <prop key="showRemovedUsers">showRemovedUsers</prop>
            </props>
        </property>
    </bean>

    <!--
        URL filename view controller.
    -->
    <bean id="urlFilenameController"
          class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>

    <!--
        The signin controller.
    -->
    <bean name="signInController" class="eu.baltrad.dex.controller.auth.SignInController">
        <property name="sessionForm">
            <value>true</value>
	</property>
	<property name="formView">
            <value>signin</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
        <property name="successView">
            <value>redirect:welcome.htm</value>
        </property>
        <property name="commandClass">
            <value>eu.baltrad.dex.model.user.User</value>
        </property>
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
    </bean>

    <!--
        The signout controller.
    -->
    <bean name="signOutController"
        class="eu.baltrad.dex.controller.auth.SignOutController">
        <property name="successView">
            <value>redirect:signin.htm</value>
        </property>
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
     </bean>

    <!--
    The index controller.
    -->
    <!--bean name="indexController"
        class="org.springframework.web.servlet.mvc.ParameterizableViewController">
        <property name="viewName">
            <value>hello</value>
        </property>
    </bean -->

    <!--
        Data channels list controller.
    -->
    <bean name="channelController"
        class="eu.baltrad.dex.controller.channel.ChannelController">
        <property name="channelManager">
            <ref bean="channelManager" />
        </property>
        <property name="successView">
            <value>channels</value>
        </property>
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
        <property name="subscriptionManager">
            <ref bean="subscriptionManager"/>
        </property>
    </bean>

    <!--
        Data from data channel controller.
    -->
    <bean name="channelDataController"
        class="eu.baltrad.dex.controller.channel.ChannelDataController">
        <property name="dataManager">
            <ref bean="dataManager" />
        </property>
        <property name="successView">
            <value>channeldata</value>
        </property>
    </bean>

    <!--
        Subscriptions controller
    -->
    <bean name="subscriptionsController"
        class="eu.baltrad.dex.controller.subscription.SubscriptionsController">
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
        <property name="subscriptionManager">
            <ref bean="subscriptionManager"/>
        </property>
        <property name="channelManager">
            <ref bean="channelManager" />
        </property>
        <property name="successView">
            <value>subscriptions</value>
        </property>
    </bean>

    <!--
        Submit subscriptions controller
    -->
    <bean name="submitSubscriptionsController"
        class="eu.baltrad.dex.controller.subscription.SubmitSubscriptionsController">
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
        <property name="subscriptionManager">
            <ref bean="subscriptionManager"/>
        </property>
        <property name="channelManager">
            <ref bean="channelManager" />
        </property>
        <property name="successView">
            <value>submit</value>
        </property>
    </bean>

    <!--
        Subscription status controller
    -->
    <bean name="subscriptionStatusController"
        class="eu.baltrad.dex.controller.subscription.SubscriptionStatusController">
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
        <property name="subscriptionManager">
            <ref bean="subscriptionManager"/>
        </property>
        <property name="channelManager">
            <ref bean="channelManager"/>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
        <property name="successView">
            <value>status</value>
        </property>
    </bean>

    <!--
        Log messages controller
    -->
    <bean name="logTableController" class="eu.baltrad.dex.controller.log.LogTableController">
        <property name="successView">
            <value>logtable</value>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        System journal controller
    -->
    <bean name="journalController" class="eu.baltrad.dex.controller.log.JournalController">
        <property name="successView">
            <value>journal</value>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Data download controller.
    -->
    <bean name="downloadController" class="eu.baltrad.dex.controller.channel.DownloadController">
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
        <property name="successView">
            <value>channeldata</value>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
	</property>
    </bean>

    <!--
        Application initializing utility.
    -->
    <bean id="initAppUtil" class="eu.baltrad.dex.util.InitAppUtil"/>

    <!--
        File catalog connector.
    -->
    <bean id="fileCatalogConnector" class="eu.baltrad.dex.util.FileCatalogConnector"/>

    <!--
        Data channel manager.
    -->
    <bean name="channelManager" class="eu.baltrad.dex.model.channel.ChannelManager"/>

    <!--
        Data manager.
    -->
    <bean name="dataManager" class="eu.baltrad.dex.model.data.DataManager"/>

    <!--
        Subscription manager.
    -->
    <bean name="subscriptionManager" class="eu.baltrad.dex.model.subscription.SubscriptionManager"/>

    <!--
        Log manager
    -->
    <bean name="logManager" class="eu.baltrad.dex.model.log.LogManager"/>

    <!--
        Data transmitter module
    -->
    <bean id="transmitter" class="eu.baltrad.dex.model.core.Transmitter">
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
        <property name="subscriptionManager">
            <ref bean="subscriptionManager"/>
        </property>
        <property name="channelManager">
            <ref bean="channelManager"/>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
        <property name="dataManager">
            <ref bean="dataManager" />
        </property>
        <property name="deliveryRegisterManager">
            <ref bean="deliveryRegisterManager"/>
        </property>
        <property name="fileCatalogConnector">
            <ref bean="fileCatalogConnector"/>
        </property>
    </bean>

    <!--
        Data receiver module.
    -->
    <bean name="receiver" class="eu.baltrad.dex.model.core.Receiver">
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Frame handler.
    -->
    <bean name="baltradFrameHandler" class="eu.baltrad.dex.model.frame.BaltradFrameHandler">
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Sign in validator.
    -->
    <bean name="signInValidator" class="eu.baltrad.dex.util.SignInValidator"/>

    <!--
        User manager.
    -->
    <bean name="userManager" class="eu.baltrad.dex.model.user.UserManager"/>

    <!--
        Delivery register manager
    -->
    <bean name="deliveryRegisterManager"
                        class="eu.baltrad.dex.model.register.DeliveryRegisterManager"/>

    <!--
        Clear message table controller - deletes records from message table
    -->
    <bean name="clrMsgsController" class="eu.baltrad.dex.controller.admin.ClrMsgsController">
        <property name="successView">
            <value>confirmclearmessages</value>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        View register controller - displays data delivery register
    -->
    <bean name="showRegController" class="eu.baltrad.dex.controller.admin.ShowRegController">
        <property name="successView">
            <value>showregister</value>
        </property>
        <property name="deliveryRegisterManager">
            <ref bean="deliveryRegisterManager"/>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
        <property name="dataManager">
            <ref bean="dataManager" />
        </property>
    </bean>
    <!--
        Clear register controller - deletes records from data delivery register table
    -->
    <bean name="clrRegController" class="eu.baltrad.dex.controller.admin.ClrRegController">
        <property name="successView">
            <value>confirmclearregister</value>
        </property>
         <property name="deliveryRegisterManager">
            <ref bean="deliveryRegisterManager"/>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Show users controller - creates list of users available in the system
    
    <bean name="showUsersController" class="eu.baltrad.dex.controller.admin.ShowUsersController">
        <property name="successView">
            <value>removeusers</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
    </bean>

    
        Select users controller - creates list of user accounts selected for removal.
    
    <bean name="selectUsersController" class="eu.baltrad.dex.controller.admin.SelectUsersController">
        <property name="successView">
            <value>selectusers</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
    </bean>

    
        Remove users controller - removes user account.
    
    <bean name="removeUsersController" class="eu.baltrad.dex.controller.admin.RemoveUsersController">
        <property name="successView">
            <value>confirmremoveusers</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
    </bean -->

    <!--
        Edit user controller - allows to modify user credentials
    -->
    <bean name="editUserController" class="eu.baltrad.dex.controller.admin.EditUserController">
        <property name="successView">
            <value>edituser</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
    </bean>

    <!--
        Add user controller - registers new user in the system
    -->
    <bean name="saveUserController" class="eu.baltrad.dex.controller.admin.SaveUserController">
        <property name="successView">
            <value>redirect:admin.htm</value>
        </property>
        <property name="commandClass">
            <value>eu.baltrad.dex.model.user.User</value>
        </property>
        <property name="formView">
            <value>saveuser</value>
        </property>
        <property name="validator">
            <ref bean="saveUserValidator"/>
        </property>
        <property name="sessionForm">
            <value>false</value>
        </property>
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Add user validator
    -->
    <bean name="saveUserValidator" class="eu.baltrad.dex.controller.admin.SaveUserValidator">
        <property name="userManager">
            <ref bean="userManager"/>
        </property>
    </bean>

    <!--
        Remove user account controller extends MultiActionController
    -->
    <bean id="removeUserController"
        class="eu.baltrad.dex.controller.admin.RemoveUserController">
        <property name="nameResolver">
            <ref local="nameResolver"/>
        </property>
        <property name="userManager">
            <ref bean="userManager" />
        </property>
        <property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager"/>
        </property>
    </bean>

    <!--
        Add channel controller - registers new data channel in the system
    -->
    <bean name="saveChannelController" class="eu.baltrad.dex.controller.admin.SaveChannelController">
        <property name="successView">
            <value>redirect:admin.htm</value>
        </property>
        <property name="commandClass">
            <value>eu.baltrad.dex.model.channel.Channel</value>
        </property>
        <property name="formView">
            <value>savechannel</value>
        </property>
        <property name="validator">
            <ref bean="saveChannelValidator"/>
        </property>
        <property name="sessionForm">
            <value>false</value>
        </property>
        <property name="channelManager">
            <ref bean="channelManager"/>
        </property>
        <property name="logManager">
            <ref bean="logManager"/>
        </property>
    </bean>

    <!--
        Add channel validator
    -->
    <bean name="saveChannelValidator" class="eu.baltrad.dex.controller.admin.SaveChannelValidator">
        <property name="channelManager">
            <ref bean="channelManager"/>
        </property>
    </bean>

    <!--
        Edit channel controller - allows to modify data channel
    -->
    <bean name="editChannelController" class="eu.baltrad.dex.controller.admin.EditChannelController">
        <property name="successView">
            <value>editchannel</value>
        </property>
        <property name="channelManager">
            <ref bean="channelManager"/>
        </property>
    </bean>

    <!--
        Remove channels controller extends MultiActionController
    -->
    <bean id="removeChannelController"
        class="eu.baltrad.dex.controller.admin.RemoveChannelController">
        <property name="nameResolver">
            <ref local="nameResolver"/>
        </property>
        <property name="channelManager">
            <ref bean="channelManager" />
        </property>
    </bean>

    <!--
        Http request interceptor.
    -->
    <bean id="httpRequestInterceptor" class="eu.baltrad.dex.util.HttpRequestInterceptor">
        <property name="signInPage">
            <value>signin.htm</value>
	</property>
	<property name="applicationSecurityManager">
            <ref bean="applicationSecurityManager" />
	</property>
    </bean>

    <!--
        Message digest utility.
    -->
    <bean name="messageDigestUtil" class="eu.baltrad.dex.util.MessageDigestUtil"/>

    <!--
        Application security manager.
    -->
    <bean name="applicationSecurityManager" class="eu.baltrad.dex.util.ApplicationSecurityManager"/>

    <!--
        Message resources.
    -->
    <bean id="messageSource"
        class="org.springframework.context.support.ResourceBundleMessageSource">
	<property name="basenames">
            <list>
		<value>messages</value>
            </list>
	</property>
    </bean>

    <!-- Integrate beast into BaltradDex -->
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>db.properties</value>
                <value>classpath:eu/baltrad/dex/util/dex.fc.properties</value>
            </list>
        </property>
    </bean>

    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${db.driver}"/>
        <property name="url" value="${db.url}"/>
        <property name="username" value="${db.user}"/>
        <property name="password" value="${db.pwd}"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>
 
    <!-- Enable transaction management -->
    <bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>
  
    <!-- we want transactions on classes -->
    <tx:annotation-driven transaction-manager="txManager" proxy-target-class="true"/>
    
    <bean id="xmlrpcgenerator" class="eu.baltrad.beast.adaptor.xmlrpc.XmlRpcCommandGenerator"/>
  
    <bean id="xmlrpcadaptormanager" class="eu.baltrad.beast.adaptor.xmlrpc.XmlRpcConfigurationManager" autowire="byType"/>
  
    <!-- Add the xml adaptor to the baltrad adaptor -->
    <bean id="adaptormanager" class="eu.baltrad.beast.adaptor.BltAdaptorManager" autowire="byType">
        <property name="types">
            <list>
                <ref bean="xmlrpcadaptormanager"/>
            </list>
        </property>
    </bean>

    <!-- Create the router -->
    <bean id="groovymgr" class="eu.baltrad.beast.rules.groovy.GroovyRuleManager" autowire="byType"/>
    <bean id="bltcompositemgr" class="eu.baltrad.beast.rules.composite.CompositingRuleManager" autowire="byType"/>
  
    <bean id="router" class="eu.baltrad.beast.router.impl.BltRouter" autowire="byType">
        <property name="ruleManagers">
            <map>
                <entry key="groovy" value-ref="groovymgr"/>
                <entry key="blt_composite" value-ref="bltcompositemgr"/>
            </map>
        </property>
    </bean>
  
    <!-- Add the baltrad adaptor manager to the baltrad manager -->
    <bean id="bltmanager" class="eu.baltrad.beast.manager.BltMessageManager" autowire="byType"/>
    
    <!-- beastui uses Controller annotations -->
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="httpRequestInterceptor"/>
            </list>
        </property>
    </bean>

    <!-- We need to have a timeout manager so that we can initiate timeout requests from anywhere -->
    <bean id="timeoutfactory" class="eu.baltrad.beast.rules.timer.TimeoutTaskFactory"/>  
    <bean id="timeoutmanager" class="eu.baltrad.beast.rules.timer.TimeoutManager" autowire="byType"/>

    <!-- and the file catalog -->
    <bean id="fc" class="eu.baltrad.fc.FileCatalog">
  	    <constructor-arg value="${database.uri}" />
  	    <constructor-arg value="${storage.dir}" />
    </bean>
    
    <!-- and the abstraction of the catalog -->
    <bean id="catalog" class="eu.baltrad.beast.db.Catalog" autowire="byType" />

    <!-- And we should have an application context to get hold of relevant managers -->
    <bean id="managercontext" class="eu.baltrad.beast.ManagerContext" autowire="byType" />
  
    <bean id="adaptorsController" class="eu.baltrad.beastui.web.controller.AdaptorsController" autowire="byType" />
    <bean id="groovyRoutesController" class="eu.baltrad.beastui.web.controller.GroovyRoutesController" autowire="byType" />
    <bean id="compositeRoutesController" class="eu.baltrad.beastui.web.controller.CompositeRoutesController" autowire="byType" />
    <bean id="showRoutesController" class="eu.baltrad.beastui.web.controller.ShowRoutesController" autowire="byType" />
</beans>
